{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Résultat du Scraping</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <a href="{{ path('scraping_insert') }}" title="Insert adverts" class="btn btn-success">
                    <i class="fa fa-plus"></i>&nbsp;Enregistrer dans la BDD
                </a>
                <div>&nbsp;</div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Afficher les 100 premiers résultats de leboncoin pour la catégorie Animaux en Rhône-Alpes
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Titre</th>
                                <th>Lieu</th>
                                <th>Prix</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for advert in results %}
                                {% if advert %}
                                <tr class="{{ cycle(['odd', 'even'], loop.index0) }} gradeX">
                                    <td>{{ advert['index'] }}</td>
                                    <td>{{ advert['title'] }}</td>
                                    <td>{{ advert['place'] }}</td>
                                    <td>
                                        {% if advert['price'] %}
                                            {{ advert['price']|number_format(2, ',')}} €
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <a href="{{ path('scraping_insert') }}" title="Insert adverts" class="btn btn-success">
                    <i class="fa fa-plus"></i>&nbsp;Enregistrer dans la BDD
                </a>
            </div>
        </div>
    </div>
{% endblock %}