{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Cr√©ation d'une annonce</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-3">
                        {{ form_label(form.title) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(form.title) }}
                        <div class="input-group has-error">
                            {{ form_errors(form.title) }}
                        </div>
                    </div>
                </div>
                <div>&nbsp;</div>
                <div class="row">
                    <div class="col-md-3">
                        {{ form_label(form.place) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(form.place) }}
                        <div class="input-group has-error">
                            {{ form_errors(form.place) }}
                        </div>
                    </div>
                </div>
                <div>&nbsp;</div>
                <div class="row">
                    <div class="col-md-3">
                        {{ form_label(form.link) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(form.link) }}
                        <div class="input-group has-error">
                            {{ form_errors(form.link) }}
                        </div>
                    </div>
                </div>
                <div>&nbsp;</div>
                <div class="row">
                    <div class="col-md-3">
                        {{ form_label(form.price) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(form.price) }}
                        <div class="input-group has-error">
                            {{ form_errors(form.price) }}
                        </div>
                    </div>
                </div>
                <div>&nbsp;</div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}