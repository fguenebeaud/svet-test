{% extends 'base.html.twig' %}

{% block body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Edition de l'annonce {{ advert.id }}</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                {{ form_start(edit_form) }}
                <div class="row">
                    <div class="col-md-3">
                        {{ form_label(edit_form.title) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(edit_form.title) }}
                        <div class="input-group has-error">
                            {{ form_errors(edit_form.title) }}
                        </div>
                    </div>
                </div>
                <div>&nbsp;</div>
                <div class="row">
                    <div class="col-md-3">
                        {{ form_label(edit_form.place) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(edit_form.place) }}
                        <div class="input-group has-error">
                            {{ form_errors(edit_form.place) }}
                        </div>
                    </div>
                </div>
                <div>&nbsp;</div>
                <div class="row">
                    <div class="col-md-3">
                        {{ form_label(edit_form.link) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(edit_form.link) }}
                        <div class="input-group has-error">
                            {{ form_errors(edit_form.link) }}
                        </div>
                    </div>
                </div>
                <div>&nbsp;</div>
                <div class="row">
                    <div class="col-md-3">
                        {{ form_label(edit_form.price) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_widget(edit_form.price) }}
                        <div class="input-group has-error">
                            {{ form_errors(edit_form.price) }}
                        </div>
                    </div>
                </div>
                <div>&nbsp;</div>
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
{% endblock %}